:global syncSalesLock;
:if ([:typeof $syncSalesLock] = "nothing") do={ :set syncSalesLock false; }
:if ($syncSalesLock = true) do={ :log warning "SYNC SALES: masih berjalan, skip"; :return; }
:set syncSalesLock true;

:local url "http://wartelpas.sobigidul.net/report/laporan/services/sync_sales.php?session=S3c7x9_LB&key=WartelpasSecureKey";

:do {
 /tool fetch url=$url keep-result=no;
 :log info "SYNC SALES: OK (2m)";
} on-error={
 :log warning "SYNC SALES: Gagal koneksi";
}

:set syncSalesLock false;